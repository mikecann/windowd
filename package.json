{
  "name": "windowd",
  "version": "0.5.0",
  "description": "Wrap any Vite project in an NW.js shell with full renderer Node.js access",
  "keywords": [
    "vite",
    "nwjs",
    "desktop",
    "node",
    "devtools"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "windowd": "./bin/cli.ts"
  },
  "files": [
    "bin"
  ],
  "scripts": {
    "test-app:basics": "cd test-apps/basics && bun run ../../bin/cli.ts",
    "test-app:debug": "cd test-apps/basics && bun run ../../bin/cli.ts --debug",
    "test-app:prod": "cd test-apps/basics && bun run ../../bin/cli.ts",
    "test-app:config": "cd test-apps/config-demo && bun run ../../bin/cli.ts",
    "test:html": "node test-webview.cjs html",
    "test:data": "node test-webview.cjs data",
    "test:external": "node test-webview.cjs external",
    "test:local": "node test-webview.cjs local"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.3.0",
    "@types/nw.js": "^0.92.0",
    "@vitejs/plugin-react": "^5.1.4",
    "nw": "^0.108.0-sdk",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "vite": "^6.0.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1"
  },
  "trustedDependencies": [
    "nw"
  ]
}